{
  "extends": [
    "development"
  ],
  "hints": {
    "meta-viewport": "off",
    "highest-available-document-mode": "off",
    "axe/text-alternatives": [
      "default",
      {
        "image-alt": "off"
      }
    ],
    "no-inline-styles": "off",
    "axe/name-role-value": [
      "default",
      {
        "link-name": "off",
        "button-name": "off"
      }
    ],
    "axe/forms": [
      "default",
      {
        "select-name": "off",
        "label": "off"
      }
    ],
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "-webkit-text-size-adjust",
          "-webkit-tap-highlight-color",
          "text-decoration-skip-ink",
          "text-align: -webkit-match-parent",
          "user-select",
          "-webkit-overflow-scrolling",
          "overflow-anchor",
          "user-select: all"
        ]
      }
    ]
  }
}